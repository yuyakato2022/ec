<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'public', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="sticky-top bg-white p-0">
      <nav class="navbar navbar-expand-lg bg-white">
          <div class="container">
            <a class="navbar-brand" href="/"><%= image_tag 'logo-syefu (3)' %></a>
            <% if customer_signed_in? %>
            <!--ログインしている時-->
              <div class="mx-auto"><p><%= current_customer.last_name %>さん、こんにちは！</p></div>
              <div class="collapse navbar-collapse col-xl-6 text-dark" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item active">
                    <%= link_to customers_path,class: 'nav-link text-dark' do %>
                      <i class="fas fa-snowman"></i> MY PAGE
                    <% end %>
                  </li>
                  <li class="nav-item active">
                    <%=  link_to items_path,class: 'nav-link text-dark' do %>
                      <i class="fas fa-birthday-cake"></i> PRODUCTS
                    <% end %>
                  </li>
                  <li class="nav-item active">
                    <%=  link_to cart_items_path ,class: 'nav-link text-dark' do %>
                      <i class="fas fa-shopping-cart"></i> CART
                    <% end %>
                  </li>
                  <li class="nav-item active">
                    <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-dark' do %>
                      <i class="fas fa-sign-out-alt"></i> LOGOUT
                    <% end %>
                  </li>
                </ul>
              </div>
            <% else %>
            <!--ログインしていない時-->
              <!--「◯◯さん、こんにちは！」の代わりのボックス-->
              <div class="mx-auto"></div>
              <div class="collapse navbar-collapse col-xl-6" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item active">
                    <%= link_to about_path,class: 'nav-link text-dark' do %>
                      <i class="fas fa-store"></i> ABOUT
                    <% end %>
                  </li>
                  <li class="nav-item active">
                    <%= link_to items_path,class: 'nav-link text-dark' do %>
                      <i class="fas fa-birthday-cake"></i> PRODUCTS
                    <% end %>
                  </li>
                  <li class="nav-item active">
                    <%= link_to new_customer_registration_path,class: 'nav-link text-dark' do %>
                      <i class="fas fa-user-plus"></i> SIGN UP
                    <% end %>
                  </li>
                  <li class="nav-item active">
                    <%= link_to new_customer_session_path ,class: 'nav-link text-dark' do %>
                      <i class="fas fa-sign-in-alt"></i> LOG IN
                    <% end %>
                  </li>
                </ul>
              </div>
            <% end %>
          </div>

        <!--ハンバーガーメニュー-->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!--ハンバーガーメニュー-->
      </nav>
    </header>
    <div id="flash-success">
      <%=render "layouts/notice" %>
    </div>

    <main>

      <div class="yield">
        <%= yield %>
      </div>

      <!--下のポール部分-->
      <div class="footer"></div>
      <!--下のポール部分-->

    </main>

    <footer class="text-center" style="background-color:#666666;">©︎only-won-beer</footer>
  </body>
</html>

