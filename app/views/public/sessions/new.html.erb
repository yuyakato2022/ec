<h3 class="mini-title mb-3">ログイン</h3>
<h5>会員の方はこちらからログイン</h5>

<%= render "public/shared/error_messages", resource: resource %>
<div class="container mt-3 ml-5">
   <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
     <div class="form-group row">
      <%= f.label :email, 'メールアドレス', class: "col-3" %>
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control col-lg-5" %>
    </div>

    <div class="form-group row">
      <%= f.label :password,'パスワード', class: "col-3" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-lg-5" %>
    </div>

    <div class="actions form-group row">
      <div class="col-3"></div>
      <%= button_tag type: 'submit', class: 'btn btn-sm btn-primary col-lg-5 text-center',style: "color:white;" do %>
        ログイン
      <% end %>
    </div>
  <% end %>
</div>


    <div class="field mx-auto text-center mt-5">
      会員登録がお済みでない方はこちらから <%= render "public/shared/links" %>
    </div>
