
  <%= form_with model: [item, review], local: false do |f| %>

    <div class="form-group">
      <%= f.label :title,"タイトル" %>
      <%= f.text_field :title, class: 'form-control review_title' %>
    </div>

    <div class="form-group">
      <%= f.label :opinion,"コメント" %>
      <%= f.text_area :body, class: 'form-control review_body' %>
    </div>

    <div class="form-group" id="star">
      <%= f.label :star,"評価", class:'col-form-label' %>
      <%= f.hidden_field :star, class: "form-control review_star" %>
    </div>

    <!-- 評価javascript -->
    <script>
    $('#star').raty({
      size     : 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf : '<%= asset_path('star-half') %>',

      scoreName: 'review[star]',
      half: true,
    });
    </script>

    <div class="form-group row">
      <div class="col ">
        <%= f.submit "投稿する",class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
