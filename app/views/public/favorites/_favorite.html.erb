<% if customer_signed_in? && item.favorited_by?(current_customer) %>
  <%= link_to item_favorites_path(item), method: :delete, remote: true do %>
    <div class="heart">
      <i class="fas fa-heart"></i><%= item.favorites.count %>
    </div>
  <% end %>
<% elsif %>
  <%= link_to item_favorites_path(item), method: :post, remote: true do %>
    <div class="heart">
      <i class="far fa-heart"></i><%= item.favorites.count %>
    </div>
  <% end %>
<% else %>
  <div class="heart">
    <i class="far fa-heart"></i><%= item.favorites.count %>
  </div>
<% end %>